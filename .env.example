# ===============================
# PostgreSQL Configuration
# ===============================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=sentiments
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ===============================
# Kafka Configuration
# ===============================
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_TOPIC=sentiment-stream
KAFKA_CONSUMER_GROUP=sentiment-workers

# ===============================
# API Configuration
# ===============================
API_HOST=0.0.0.0
API_PORT=8000
FRONTEND_PORT=3000
LOG_LEVEL=INFO

# ===============================
# AI / Sentiment Configuration
# (Optional â€“ safe to leave empty)
# ===============================
HUGGINGFACE_MODEL=distilbert-base-uncased-finetuned-sst-2-english
EMOTION_MODEL=j-hartmann/emotion-english-distilroberta-base

# External LLM (optional)
EXTERNAL_LLM_PROVIDER=groq
EXTERNAL_LLM_API_KEY=<student-provides-api-key>
EXTERNAL_LLM_MODEL=llama-3.1-8b-instant

# ===============================
# Alert Configuration
# ===============================
ALERT_NEGATIVE_RATIO_THRESHOLD=2.0
ALERT_WINDOW_MINUTES=5
ALERT_MIN_POSTS=10
